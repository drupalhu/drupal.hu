{
    "name": "drupalhu/drupalhu",
    "type": "project",
    "description": "Code base of drupal.hu.",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "process-timeout": 0,
        "sort-packages": true
    },
    "repositories": {
        "sweetchuck/dtt-core": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/dtt-core.git"
        },
        "sweetchuck/dtt-entity_legal": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/dtt-entity_legal.git"
        },
        "drupal/marvin": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin.git"
        },
        "drupal/marvin_product": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin_product.git"
        },
        "drupal/marvin_acquia": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin_acquia.git"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.6",
        "cweagans/composer-patches": "^1.6",
        "drupal/acquia_connector": "^3.0",
        "drupal/acquia_search": "^3.0",
        "drupal/admin_toolbar": "^3.0",
        "drupal/allowed_formats": "^1.3",
        "drupal/bootstrap_layouts": "^5.2",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-recommended": "^9.2",
        "drupal/entity_legal": "^3.0@beta",
        "drupal/eu_cookie_compliance": "^1.11",
        "drupal/facets": "^1.8",
        "drupal/facets_block": "^1.3",
        "drupal/memcache": "^2.2",
        "drupal/metatag": "^1.14",
        "drupal/pathauto": "^1.8",
        "drupal/schema_metatag": "^2.1",
        "drupal/search_api_solr": "^4.1",
        "drupal/string_field_formatter": "^2.0",
        "drush/drush": "^10.0",
        "oomphinc/composer-installers-extender": "^2.0"
    },
    "require-dev": {
        "behat/mink": "^1.8",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.4",
        "bex/behat-screenshot": "^2.1",
        "dmore/behat-chrome-extension": "^1.3",
        "drupal/devel": "^4.0",
        "drupal/marvin": "2.x-dev",
        "drupal/marvin_acquia": "2.x-dev",
        "drupal/marvin_product": "2.x-dev",
        "drupal/migrate_dc": "dev-1.x#19df788b8d83e6ea47f2b3e4854ff35a827edb8c",
        "drupal/migrate_plus": "^5.1",
        "drupal/migrate_tools": "^5.0",
        "drupal/module_filter": "^3.1",
        "drupal/styleguide": "^2.0",
        "kint-php/kint": "^3.3",
        "mikey179/vfsstream": "^1.6",
        "nuvoleweb/drupal-behat": "^1.2",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.4",
        "sweetchuck/composer-suite": "^1.2",
        "sweetchuck/dtt-core": "9.x-dev",
        "sweetchuck/dtt-entity_legal": "3.0.x-dev",
        "symfony/phpunit-bridge": "^5.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "DrupalHu\\DrupalHu\\Tests\\Unit\\": "tests/src/Unit/",
            "Drush\\Commands\\app\\": "drush/Commands/custom/app/"
        }
    },
    "scripts": {
        "post-install-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postInstallCmd",
        "post-update-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postUpdateCmd",
        "clean": [
            "@clean:backend",
            "@clean:frontend",
            "@clean:translations"
        ],
        "clean:backend": [
            "rm -rf bin/ reports/ vendor/",
            "rm -rf docroot/core/ docroot/modules/contrib/ docroot/profiles/contrib/ docroot/themes/contrib/ docroot/libraries/",
            "rm -rf drush/Commands/contrib/"
        ],
        "clean:frontend": [
            "rm -rf docroot/themes/custom/*/node_modules/",
            "rm -rf docroot/themes/custom/*/**/*.css",
            "rm -rf docroot/themes/custom/*/**/*.css.map"
        ],
        "clean:translations": [
            "git clean -X --force -- 'sites/all/translations/*.po'"
        ],
        "reset": [
            "@reset:search",
            "@reset:cache",
            "@reset:files",
            "@reset:db"
        ],
        "reset:search": [
            "[ \"$(drush --config=drush @app.local status --no-ansi --fields=bootstrap --format=string)\" = \"Successful\" ] && drush --ansi --config=drush --yes @app.local search-api:server-clear general || true"
        ],
        "reset:cache": [
            "drush --config=drush --yes @app.local cache:rebuild || true"
        ],
        "reset:files": [
            "rm -rf docroot/sites/*/files/*",
            "rm -rf sites/*/php_storage/twig/*",
            "rm -rf sites/*/private/*",
            "rm -rf sites/*/temporary/*"
        ],
        "reset:db": [
            "drush --config=drush --yes @app.local sql:drop"
        ],
        "site:install:prod:empty": [
            "@reset:search",
            "@reset:cache",
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''"
        ],
        "site:install:prod:default": [
            "@reset:search",
            "@reset:cache",
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:migrate default"
        ],
        "site:install:prod:dummy": [
            "@reset:search",
            "@reset:cache",
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:migrate dummy"
        ],
        "site:install:local:empty": [
            "@reset:search",
            "@reset:cache",
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:toggle-modules -vv --define=marvin.environment=local"
        ],
        "site:install:local:default": [
            "@reset:search",
            "@reset:cache",
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:toggle-modules -vv --define=marvin.environment=local",
            "bin/drush --config=drush @app.local --yes marvin:migrate default"
        ],
        "site:install:local:dummy": [
            "@reset:search",
            "@reset:cache",
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:toggle-modules -vv --define=marvin.environment=local",
            "bin/drush --config=drush @app.local --yes marvin:migrate dummy"
        ],
        "lint": [
            "@lint:shellcheck"
        ],
        "lint:shellcheck": [
            "@lint:shellcheck:circleci",
            "@lint:shellcheck:ddev",
            "@lint:shellcheck:hooks"
        ],
        "lint:shellcheck:circleci": "shellcheck $(git ls-files -- './.circleci/*.sh' './.circleci/*.bash' './.circleci/*.zsh')",
        "lint:shellcheck:ddev": "shellcheck $(git ls-files -- './.ddev/*.sh' './.ddev/*.bash' './.ddev/*.zsh')",
        "lint:shellcheck:hooks": "shellcheck $(git ls-files -- './hooks/*.sh' './hooks/*.bash' './hooks/*.zsh')"
    },
    "scripts-descriptions": {
        "clean": "<fg=yellow>Deletes</> all the third-party codes downloaded by <fg=cyan>package managers</>.",
        "clean:backend": "<fg=yellow>Deletes</> all the third-party codes downloaded by <fg=cyan>Composer</>.",
        "clean:frontend": "<fg=yellow>Deletes</> all the third-party codes downloaded by <fg=cyan>Yarn</>.",
        "clean:translations": "<fg=yellow>Deletes</> all the <fg=cyan>*.po files</> which are belong to third-party codes.",
        "reset": "<fg=red>Deletes</> all content from all data storage (database, cache, solr, public|pivate|temporary|php_storage files).",
        "reset:search": "<fg=red>Deletes</> all content from <fg=cyan>Solr indexes</>.",
        "reset:cache": "<fg=red>Deletes</> all content from <fg=cyan>cache</> storages.",
        "reset:files": "<fg=red>Deletes</> all the uploaded <fg=cyan>files</> (public|pivate|temporary|php_storage files).",
        "reset:db": "<fg=red>Drops</> the <fg=cyan>default database</>.",
        "site:install:prod:empty": "drush site:install – without any required content (the site won't work properly).",
        "site:install:prod:default": "drush site:install – with minimum required content.",
        "site:install:prod:dummy": "drush site:install – with minimum required content and with the developer helper dummy contents.",
        "site:install:local:empty": "drush site:install – same as 'prod' but the developer helper modules are enabled.",
        "site:install:local:default": "drush site:install – same as 'prod' but the developer helper modules are enabled",
        "site:install:local:dummy": "drush site:install – same as 'prod' but the developer helper modules are enabled.",
        "lint": "@todo Create native marvin commands like 'drush marvin:lint:phpcs'."
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/libraries/slick": [
                "npm-asset/slick-carousel"
            ],
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/2960714 - [meta] Improve ::generateSampleValue() for common field types": "./patches/drupal/core/issue-2960714-string-item-sample-value-min-length.patch"
            },
            "drupal/entity_legal": {
                "https://www.drupal.org/project/entity_legal/issues/3223107 - EntityLegalDocumentForm/path/#element_validate": "https://git.drupalcode.org/project/entity_legal/-/merge_requests/1.patch"
            },
            "drupal/drupal-extension": {
                "Behat config schema - extendable selectors and text": "https://patch-diff.githubusercontent.com/raw/jhedstrom/drupalextension/pull/494.patch"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./docroot"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": {
                    "mode": "skip"
                },
                "[web-root]/sites/example.settings.local.php": {
                    "mode": "skip"
                },
                "[web-root]/.csslintrc": {
                    "mode": "skip"
                },
                "[web-root]/.editorconfig": {
                    "mode": "skip"
                },
                "[web-root]/.eslintignore": {
                    "mode": "skip"
                },
                "[web-root]/.eslintrc.json": {
                    "mode": "skip"
                },
                "[web-root]/.gitattributes": {
                    "mode": "skip"
                },
                "[web-root]/.ht.router.php": {
                    "mode": "skip"
                },
                "[web-root]/example.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/INSTALL.txt": {
                    "mode": "skip"
                },
                "[web-root]/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/README.md": {
                    "mode": "skip"
                },
                "[web-root]/modules/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/modules/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/profiles/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/profiles/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/themes/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/themes/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/sites/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/sites/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/.htaccess": {
                    "mode": "skip"
                },
                "[web-root]/web.config": {
                    "mode": "skip"
                }
            },
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            }
        },
        "composer-suite": {
            "local": [
                {
                    "type": "prepend",
                    "config": {
                        "parents": ["repositories"],
                        "items": {
                            "sweetchuck/lint-report": {
                                "type": "path",
                                "url": "../../sweetchuck/lint-report-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/lint-report.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-composer": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-composer-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-composer.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-git": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-git-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-git.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-nvm": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-nvm-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-nvm.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-phpcs": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-phpcs-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-phpcs.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-phpmd": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-phpmd-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-phpmd.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-phpunit": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-phpunit-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-phpunit.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-stringy": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-stringy-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-stringy.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/robo-yarn": {
                                "type": "path",
                                "url": "../../sweetchuck/robo-yarn-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/robo-yarn.git",
                                        "branch": "1.x"
                                    }
                                }
                            },
                            "sweetchuck/utils": {
                                "type": "path",
                                "url": "../../sweetchuck/utils-1.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/utils.git",
                                        "branch": "1.x"
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "type": "replaceRecursive",
                    "config": {
                        "parents": ["repositories"],
                        "items": {
                            "sweetchuck/dtt-core": {
                                "type": "path",
                                "url": "../../sweetchuck/dtt-core-9.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/dtt-core.git",
                                        "branch": "9.x"
                                    }
                                }
                            },
                            "sweetchuck/dtt-entity_legal": {
                                "type": "path",
                                "url": "../../sweetchuck/dtt-entity_legal-3.0.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/dtt-entity_legal.git",
                                        "branch": "3.0.x"
                                    }
                                }
                            },
                            "drupal/marvin": {
                                "type": "path",
                                "url": "../../drupal/marvin-2.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/drupal-marvin.git",
                                        "branch": "2.x"
                                    }
                                }
                            },
                            "drupal/marvin_product": {
                                "type": "path",
                                "url": "../../drupal/marvin_product-2.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/drupal-marvin_product.git",
                                        "branch": "2.x"
                                    }
                                }
                            },
                            "drupal/marvin_acquia": {
                                "type": "path",
                                "url": "../../drupal/marvin_acquia-2.x",
                                "options": {
                                    "repo-path": {
                                        "url": "https://github.com/Sweetchuck/drupal-marvin_acquia.git",
                                        "branch": "2.x"
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "type": "replaceRecursive",
                    "config": {
                        "parents": ["require"],
                        "items": {
                            "sweetchuck/lint-report": "1.x-dev"
                        }
                    }
                }
            ]
        }
    }
}
