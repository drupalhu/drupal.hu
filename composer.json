{
    "name": "drupalhu/drupalhu",
    "type": "project",
    "description": "Code base of drupal.hu.",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "process-timeout": 0,
        "sort-packages": true
    },
    "repositories": {
        "cheppers/drupal-behat-contexts": {
            "type": "git",
            "url": "https://github.com/Cheppers/drupal-behat-contexts.git"
        },
        "drupal/marvin": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin.git"
        },
        "drupal/marvin_product": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin_product.git"
        },
        "drupal/marvin_acquia": {
            "type": "git",
            "url": "https://github.com/Sweetchuck/drupal-marvin_acquia.git"
        },
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "php": ">=7.4",
        "composer/installers": "^1.6",
        "cweagans/composer-patches": "^1.6",
        "drupal/admin_toolbar": "^2.4",
        "drupal/allowed_formats": "^1.3",
        "drupal/bootstrap_barrio": "^5.1",
        "drupal/core-composer-scaffold": "^9.0",
        "drupal/core-recommended": "^9.0",
        "drupal/entity_legal": "dev-3.0.x",
        "drupal/eu_cookie_compliance": "^1.11",
        "drupal/marvin": "dev-8.x-1.x",
        "drupal/marvin_product": "dev-8.x-1.x",
        "drupal/metatag": "^1.14",
        "drupal/pathauto": "^1.8",
        "drupal/schema_metatag": "^2.1",
        "drupal/search_api_solr": "^4.1",
        "drush/drush": "^10.0",
        "kint-php/kint": "^3.3",
        "oomphinc/composer-installers-extender": "^1.1",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/devel": "^4.0",
        "drupal/marvin_acquia": "dev-8.x-1.x",
        "drupal/migrate_dc": "dev-1.x#19df788b8d83e6ea47f2b3e4854ff35a827edb8c",
        "drupal/migrate_plus": "^5.1",
        "drupal/migrate_tools": "^5.0",
        "drupal/module_filter": "^3.1",
        "phpunit/phpunit": "^9.4"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "DrupalHu\\DrupalHu\\Tests\\Unit\\": "tests/src/Unit/",
            "Drush\\Commands\\app\\": "drush/Commands/custom/app/"
        }
    },
    "scripts": {
        "post-install-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postInstallCmd",
        "post-update-cmd": "\\Drupal\\marvin\\Composer\\Scripts::postUpdateCmd",
        "clean": [
            "@clean:backend",
            "@clean:frontend",
            "@clean:translations"
        ],
        "clean:backend": [
            "rm -rf bin/ reports/ vendor/",
            "rm -rf docroot/core/ docroot/modules/contrib/ docroot/profiles/contrib/ docroot/themes/contrib/ docroot/libraries/",
            "rm -rf drush/Commands/contrib/"
        ],
        "clean:frontend": [
            "rm -rf docroot/themes/custom/*/node_modules/",
            "rm -rf docroot/themes/custom/*/**/*.css",
            "rm -rf docroot/themes/custom/*/**/*.css.map"
        ],
        "clean:translations": [
            "git clean -X -f -- sites/all/translations"
        ],
        "reset": [
            "@reset:files",
            "@reset:db"
        ],
        "reset:files": [
            "rm -rf docroot/sites/*/files/*",
            "rm -rf sites/*/php_storage/twig/*",
            "rm -rf sites/*/private/*",
            "rm -rf sites/*/temporary/*"
        ],
        "reset:db": [
            "drush --config=drush --yes @app.local sql:drop"
        ],
        "site:install:prod:empty": [
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''"
        ],
        "site:install:prod:default": [
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:migrate default"
        ],
        "site:install:prod:dummy": [
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:migrate dummy"
        ],
        "site:install:local:empty": [
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:toggle-modules -vv --define=marvin.environment=local"
        ],
        "site:install:local:default": [
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:toggle-modules -vv --define=marvin.environment=local",
            "bin/drush --config=drush @app.local --yes marvin:migrate default"
        ],
        "site:install:local:dummy": [
            "@reset:files",
            "bin/drush --config=drush @app.local --yes site:install appp --existing-config --marvin-migrate=''",
            "bin/drush --config=drush @app.local --yes marvin:toggle-modules -vv --define=marvin.environment=local",
            "bin/drush --config=drush @app.local --yes marvin:migrate dummy"
        ]
    },
    "scripts-descriptions": {
        "clean": "<fg=yellow>Deletes</> all the third-party codes downloaded by the used <info>package managers</>.",
        "clean:backend": "<fg=yellow>Deletes</> all the third-party codes downloaded by <info>Composer</>.",
        "clean:frontend": "<fg=yellow>Deletes</> all the third-party codes downloaded by <info>Yarn</>.",
        "clean:translations": "<fg=yellow>Deletes</> all the <info>*.po files</> which are belong to third-party codes.",
        "reset": "<fg=red>Drops</> the <info>default database</> and <fg=red>deletes</> the uploaded <info>files</> (public and private).",
        "reset:files": "<fg=red>Deletes</> the uploaded <info>files</> (public and private).",
        "reset:db": "<fg=red>Drops</> the <info>default database</>."
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/libraries/slick": [
                "npm-asset/slick-carousel"
            ],
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patches": {
            "drupal/core": {
                "https://www.drupal.org/project/drupal/issues/2960714 - [meta] Improve ::generateSampleValue() for common field types": "./patches/drupal/core/issue-2960714-string-item-sample-value-min-length.patch"
            },
            "drupal/entity_legal": {
                "https://www.drupal.org/project/entity_legal/issues/2544248 - Increase length of the 'acceptance_label' field to 1024": "https://www.drupal.org/files/issues/entity_legal-acceptance_label_too_short-2544248-3.patch",
                "https://www.drupal.org/project/entity_legal/issues/2957951 - Migrate source_module property": "https://www.drupal.org/files/issues/2018-10-04/2957951-migrate-issue.patch"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./docroot"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": {
                    "mode": "skip"
                },
                "[web-root]/sites/example.settings.local.php": {
                    "mode": "skip"
                },
                "[web-root]/.csslintrc": {
                    "mode": "skip"
                },
                "[web-root]/.editorconfig": {
                    "mode": "skip"
                },
                "[web-root]/.eslintignore": {
                    "mode": "skip"
                },
                "[web-root]/.eslintrc.json": {
                    "mode": "skip"
                },
                "[web-root]/.gitattributes": {
                    "mode": "skip"
                },
                "[web-root]/.ht.router.php": {
                    "mode": "skip"
                },
                "[web-root]/example.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/INSTALL.txt": {
                    "mode": "skip"
                },
                "[web-root]/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/modules/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/modules/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/profiles/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/profiles/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/themes/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/themes/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/sites/.gitignore": {
                    "mode": "skip"
                },
                "[web-root]/sites/README.txt": {
                    "mode": "skip"
                },
                "[web-root]/.htaccess": {
                    "mode": "skip"
                },
                "[web-root]/web.config": {
                    "mode": "skip"
                }
            },
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            }
        }
    }
}
