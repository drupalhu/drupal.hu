{
  "postcssInlineSvg": {
    "removeFill": true,
    "paths": [
      "./node_modules/bootstrap-icons/icons"
    ]
  },
  "pxtorem": {
    "propList": [
      "font",
      "font-size",
      "line-height",
      "letter-spacing",
      "*margin*",
      "*padding*"
    ],
    "mediaQuery": true
  },
  "sass": {
    "includePaths": [],
    "outputStyle": "expanded"
  },
  "sassLint": {
    "configFile": "../appf/.sass-lint.yml"
  },
  "autoprefixer": {
    "browsers": [
      "Chrome >= 35",
      "Firefox >= 38",
      "Edge >= 12",
      "Explorer >= 10",
      "iOS >= 8",
      "Safari >= 8",
      "Android 2.3",
      "Android >= 4",
      "Opera >= 12"
    ]
  },
  "browserSync": {
    "proxy": "http://drupalhu.localhost"
  },
  "paths": {
    "sass": {
      "src": [
        "./css/**/*.scss"
      ],
      "dest": "./css"
    },
    "js": {
      "src": [
        "./node_modules/bootstrap/dist/js/bootstrap.min.js",
        "./node_modules/jquery/dist/jquery.min.js",
        "./node_modules/popper.js/dist/umd/popper.min.js",
        "./node_modules/popper.js/dist/umd/popper.min.js.map"
      ],
      "dest": "./js"
    }
  }
}
