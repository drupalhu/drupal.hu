{
  "postcssInlineSvg": {
    "removeFill": true,
    "paths": []
  },
  "pxtorem": {
    "propList": [
      "font",
      "font-size",
      "line-height",
      "letter-spacing",
      "*margin*",
      "*padding*"
    ],
    "mediaQuery": true
  },
  "sass": {
    "includePaths": [],
    "outputStyle": "expanded"
  },
  "sassLint": {
    "configFile": "./.sass-lint.yml"
  },
  "autoprefixer": {
    "overrideBrowserslist": [
      "Chrome >= 35",
      "Firefox >= 38",
      "Edge >= 12",
      "Explorer >= 10",
      "iOS >= 8",
      "Safari >= 8",
      "Android 2.3",
      "Android >= 4",
      "Opera >= 12"
    ]
  },
  "browserSync": {
    "proxy": "http://drupalhu.localhost"
  },
  "paths": {
    "sass": {
      "appb": {
        "src": ["./docroot/themes/custom/appb/css/**/*.scss"],
        "dst": "./docroot/themes/custom/appb/css"
      },
      "appf": {
        "src": ["./docroot/themes/custom/appf/css/**/*.scss"],
        "dst": "./docroot/themes/custom/appf/css"
      }
    },
    "js": {
      "appb": {
        "src": [],
        "dst": "./docroot/themes/custom/appb/js"
      }
    }
  }
}
